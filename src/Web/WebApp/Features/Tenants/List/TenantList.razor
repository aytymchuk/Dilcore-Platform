@inherits AsyncComponentBase

<MudGrid Spacing="6">
    @if (_tenants == null)
    {
        <MudItem xs="12">
            <MudText>Loading tenants...</MudText>
        </MudItem>
    }
    else
    {
        @foreach (var tenant in _tenants)
        {
            <MudItem xs="12" sm="6" md="4" lg="3">
                <EntityCard 
                    Title="@tenant.Name" 
                    Subtitle="@tenant.SystemName" 
                    Description="@tenant.Description"
                    Label="Active"
                    LabelColor="Color.Success"
                    LabelBackgroundColor="rgba(34, 197, 94, 0.1)"
                    GradientStart="#1e3a8a"
                    GradientEnd="#0f172a"
                    ButtonColor="Color.Primary">
                </EntityCard>
            </MudItem>
        }

        @* Card: Deploy New Tenant *@
        <MudItem xs="12" sm="6" md="4" lg="3">
            <CreateEntityCard OnClick="OpenCreateDialog" />
        </MudItem>
    }
</MudGrid>
