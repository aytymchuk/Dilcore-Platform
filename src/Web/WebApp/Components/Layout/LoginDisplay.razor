@using Dilcore.WebApp.Constants
@using Microsoft.AspNetCore.Hosting
@using Dilcore.WebApp.Features.Users

<AuthorizeView>
    <Authorized>
        <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="4">
            <MudText>Hello, @(UserState.CurrentUser?.FullName ?? context.User.Identity?.Name)!</MudText>
            <MudLink Href="@RouteConstants.Identity.Logout">Sign Out</MudLink>
        </MudStack>
    </Authorized>
    <NotAuthorized>
        <MudLink Href="@RouteConstants.Identity.Login">Sign In</MudLink>
    </NotAuthorized>
</AuthorizeView>