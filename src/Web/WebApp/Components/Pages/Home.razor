@page "/"
@using Dilcore.WebApp.Components.Common.Cards

<PageTitle>Tenant Portal</PageTitle>

<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="mt-8 px-8">
    
    <div class="mb-10">
        <MudText Typo="Typo.h3" Class="mb-2" Style="font-weight: 900; letter-spacing: -0.025em;">Select Organization</MudText>
        <MudText Typo="Typo.body1" Color="Color.Surface" Style="font-size: 1.125rem; line-height: 1.75rem; max-width: 42rem;">Access and manage your deployed tenant environments. Select an instance to view detailed metrics.</MudText>
    </div>

    <MudGrid Spacing="6">
        @* Card 1: Acme Corp *@
        <MudItem xs="12" sm="6" md="4" lg="3">
            <EntityCard 
                Title="Acme Corp" 
                Subtitle="sys-prod-001" 
                Description="Main production environment for Acme retail operations across North America."
                Label="Active"
                LabelColor="Color.Success"
                LabelBackgroundColor="rgba(34, 197, 94, 0.1)"
                GradientStart="#1e3a8a"
                GradientEnd="#0f172a"
                PatternOverlayStyle="opacity: 0.3; background-image: radial-gradient(#4f46e5 1px, transparent 1px); background-size: 16px 16px;"
                ButtonColor="Color.Primary">
            </EntityCard>
        </MudItem>

        @* Card 2: Global Logistics *@
        <MudItem xs="12" sm="6" md="4" lg="3">
            <EntityCard 
                Title="Global Logistics" 
                Subtitle="sys-log-04" 
                Description="Supply chain management instance handling real-time inventory tracking."
                Label="Active"
                LabelColor="Color.Success"
                LabelBackgroundColor="rgba(34, 197, 94, 0.1)"
                GradientStart="#312e81"
                GradientEnd="#581c87"
                ButtonColor="Color.Surface">
                <FooterContent>
                    <MudText Typo="Typo.caption" Color="Color.Secondary">Last accessed 2h ago</MudText>
                </FooterContent>
            </EntityCard>
        </MudItem>

        @* Card 3: Beta Testing *@
        <MudItem xs="12" sm="6" md="4" lg="3">
            <EntityCard 
                Title="Beta Testing" 
                Subtitle="sys-dev-02" 
                Description="Sandbox environment for QA team feature testing and load balancing experiments."
                Label="Maintenance"
                LabelColor="Color.Warning"
                LabelBackgroundColor="rgba(234, 179, 8, 0.1)"
                GradientStart="#1e293b"
                GradientEnd="#0f172a"
                ButtonColor="Color.Surface">
                <FooterContent>
                    <div>
                        <MudAvatar Size="Size.Small" Color="Color.Primary" Class="text-xs font-bold" Style="height:24px; width:24px; font-size:10px;">QA</MudAvatar>
                    </div>
                </FooterContent>
            </EntityCard>
        </MudItem>

        @* Card 4: EMEA Regional *@
        <MudItem xs="12" sm="6" md="4" lg="3">
            <EntityCard 
                Title="EMEA Regional" 
                Subtitle="sys-eu-12" 
                Description="Isolated instance for European market data compliance and GDPR handling."
                Label="Active"
                LabelColor="Color.Success"
                LabelBackgroundColor="rgba(34, 197, 94, 0.1)"
                GradientStart="#164e63"
                GradientEnd="#1e3a8a"
                ButtonColor="Color.Surface">
                 <FooterContent>
                    <MudText Typo="Typo.caption" Color="Color.Secondary">London, UK</MudText>
                </FooterContent>
            </EntityCard>
        </MudItem>

        @* Card 5: Legacy Archive *@
        <MudItem xs="12" sm="6" md="4" lg="3">
            <EntityCard 
                Title="Legacy Archive" 
                Description="Read-only access to historical data from fiscal year 2020-2023."
                Label="Archived"
                LabelColor="Color.Default"
                LabelBackgroundColor="rgba(107, 114, 128, 0.1)"
                LabelTextColor="#9ca3af"
                GradientStart="#1f2937"
                GradientEnd="#18181b"
                ButtonColor="Color.Surface"
                ButtonIcon="@Icons.Material.Filled.Visibility"
                ButtonText="View">
                 <FooterContent>
                    <MudText Typo="Typo.caption" Color="Color.Secondary">Read-only</MudText>
                </FooterContent>
            </EntityCard>
        </MudItem>

        @* Card 6: Deploy New Tenant *@
        <MudItem xs="12" sm="6" md="4" lg="3">
            <CreateEntityCard />
        </MudItem>

    </MudGrid>
</MudContainer>
