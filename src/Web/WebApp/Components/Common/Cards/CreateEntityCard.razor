<div class="flex-column align-center justify-center rounded-xl border-dashed hover-mud-border-primary transition-all cursor-pointer relative" 
     style="display: flex; height: 100%; min-height: 200px; border-width: 2px; border-color: var(--mud-palette-lines-default); padding: 16px;"
     @onclick="HandleClick">
     <div class="card-overlay hover-bg-surface-container" style="transition: background-color 0.2s; background-color: transparent;"></div>
     <div class="z-10 flex-column align-center justify-center w-100 h-100" style="display: flex; width: 100%; height: 100%; position: relative; z-index: 10;">
        <div class="d-flex align-center justify-center rounded-circle mb-3 transition-all" style="height: 3rem; width: 3rem; background-color: var(--mud-palette-lines-default); color: var(--mud-palette-text-secondary);">
            <MudIcon Icon="@Icons.Material.Filled.Add" Size="Size.Medium" />
        </div>
        <MudText Typo="Typo.subtitle1" Class="font-bold" Color="Color.Inherit" Style="font-weight: 700;">@Title</MudText>
        <MudText Typo="Typo.body2" Color="Color.Secondary" Align="Align.Center" Class="mt-1" Style="font-size: 0.875rem;">@Subtitle</MudText>
     </div>
</div>