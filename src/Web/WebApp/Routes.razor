@using MudBlazor
<Router AppAssembly="typeof(Routes).Assembly">
    <Found Context="routeData">
        <AuthorizeRouteView RouteData="routeData" DefaultLayout="typeof(Dilcore.WebApp.Components.Layout.MainLayout)">
            <NotAuthorized>
                 <MudGrid Class="mt-4">
                    <MudItem xs="12" Class="d-flex justify-center">
                        <MudText Typo="Typo.h3">Not Authorized</MudText>
                    </MudItem>
                     <MudItem xs="12" Class="d-flex justify-center">
                        <MudText>You are not authorized to view this page. <MudLink Href="Account/Login">Sign In</MudLink></MudText>
                    </MudItem>
                </MudGrid>
            </NotAuthorized>
        </AuthorizeRouteView>
        <FocusOnNavigate RouteData="routeData" Selector="h1" />
    </Found>
    <NotFound>
        <LayoutView Layout="@typeof(Dilcore.WebApp.Components.Layout.MainLayout)">
            <MudGrid Class="mt-4">
                <MudItem xs="12" Class="d-flex justify-center">
                    <MudText Typo="Typo.h3">404 - Page not found</MudText>
                </MudItem>
                <MudItem xs="12" Class="d-flex justify-center">
                    <MudText>Sorry, there's nothing at this address.</MudText>
                </MudItem>
            </MudGrid>
        </LayoutView>
    </NotFound>
</Router>
